<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apaolantonio.tomaestado">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/epe_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/epe_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ActivitySplash"
            android:label="@string/title_activity_activity_splash"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityLogin"
            android:label="@string/title_activity_activity_login"/>
        <activity
            android:name=".activities.ActivityAdmin"
            android:label="@string/title_activity_admin"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"/>
        <activity
            android:name=".activities.ActivityRutas"
            android:label="@string/title_activity_ruta"/>

        <activity
            android:name=".activities.ActivityEstadistica"
            android:label="@string/title_activity_estadistica"/>
        <activity
            android:name=".activities.ActivityMedidores"
            android:label="@string/title_activity_medidor"/>

        <activity
            android:name=".activities.ActivityTomarEstado"
            android:label="@string/title_activity_tomarestado"
            android:parentActivityName=".activities.ActivityMedidores" >

            <!-- Aqui tendras que poner el nombre de la actividad que quieras que sea el padre -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ActivityMedidores" />
        </activity>

        <activity
            android:name=".activities.ActivityCheckOrdenativo"
            android:label="@string/title_activity_ordenativo" >
        </activity>
        <activity
            android:name=".activities.ActivityCheckMensaje"
            android:label="@string/title_activity_mensaje" >
        </activity>
        <activity
            android:name=".activities.ActivityCheckUbicacion"
            android:label="@string/title_activity_ubicacion" >
        </activity>
        <activity
            android:name=".activities.ActivityMedidoresNoIncorporados"
            android:label="@string/title_activity_medidoresni" >
        </activity>
        <activity
            android:name=".activities.ActivityMedidoresCD"
            android:label="@string/title_activity_medidorescd" >
        </activity>
    </application>

</manifest>